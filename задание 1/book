using System;
using System.Collections.Generic;
using System.Linq;
using System.Reflection;
using System.Text;
using System.Threading.Tasks;

namespace p4ela
{
    internal class Book
    {
        private string title;
        private int pages;
        public Book(string title, int pages)
        {
            this.title = title;
            this.pages = (pages >= 1 && pages <= 5000) ? pages : 1;
        }
        public Book(string title)
        {
            this.title = title;
            this.pages = 100;
        }
        public Book()
        {
            title = "Без названия";
            pages = 1;
        }
        public void Read()
        {
            Console.WriteLine($"Читаю книгу {title}, страниц {pages} ");
        }
    }
}
